{
  "id": null,
  "title": "Resource Usage Dashboard",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "Pod CPU Usage (cores)",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{container!=\"\"}[5m])) by (pod)",
          "legendFormat": "{{pod}}"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Pod Memory Usage (MiB)",
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{container!=\"\"}) by (pod) / 1024 / 1024",
          "legendFormat": "{{pod}}"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    }
  ]
}
